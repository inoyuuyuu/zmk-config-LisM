&spi0 {
    status = "okay";

    trackball_central: trackball@1 {
        status = "okay";
        compatible = "pixart,paw3222";
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&xiao_d 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };
};

// ペリフェラル（split経由）のリスナーを有効化
&peripheral_listener {
    status = "okay";
    /* 左（peripheral）トラボを常にスクロールにする */
    input-processors =
        <&zip_xy_to_scroll_mapper>,
        <&zip_scroll_scaler 1 16>;
};

// セントラルのリスナーを有効化し、deviceを紐付け（右はカーソルのまま）
&central_listener {
    status = "okay";
    device = <&trackball_central>;
    input-processors =
        <&zip_xy_transform (INPUT_TRANSFORM_X_INVERT | INPUT_TRANSFORM_Y_INVERT)>;
    /* scroller は付けない（＝スクロール化しない） */
};
